@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<!-- need to write script to update checkboxes and radio buttons -->
    <script type="text/javascript">
        $(document).ready(function () {
            if("@Model.Experience" === ""){

            }
            else
            {
                if ('@Model.Experience' === 'Entry Level') {
                    $('#Experiencech1').attr('checked', 'checked');
                    $('#Experiencech1').attr('checked', 'checked');
                }
                if ('@Model.Experience' === '0 - 2 Years') {
                    $('#Experiencech2').attr('checked', 'checked');
                }
                if ('@Model.Experience' === '2 - 5 Years') {
                    $('#Experiencech3').attr('checked', 'checked');
                }
                if ('@Model.Experience' === '5+ Years') {
                    $('#Experiencech4').attr('checked', 'checked');
                }
            }

            if("@Model.JobType" === ""){
            }
            else{

                if ('@Model.JobType' === 'Full Time') {
                    $('#JobTypech1').attr('checked', 'checked');
                    $('#JobTypech1').attr('checked', 'checked');
                }
                if ('@Model.JobType' === 'Part Time') {
                    $('#JobTypech2').attr('checked', 'checked');
                    $('#JobTypech2').attr('checked', 'checked');
                }
                if ('@Model.JobType' === 'Casual') {
                    $('#JobTypech3').attr('checked', 'checked');
                    $('#JobTypech3').attr('checked', 'checked');
                }
                if ('@Model.JobType' === 'Contract') {
                    $('#JobTypech4').attr('checked', 'checked');
                    $('#JobTypech4').attr('checked', 'checked');
                }
            }
            if(@Model.SalaryMin != null || @Model.SalaryMin != '' || @Model.SalaryMax != null || @Model.SalaryMax != ''){
                var salaryMin = @Model.SalaryMin;
                var salaryMax = @Model.SalaryMax;

                $("#SalaryMin").ionRangeSlider({
                    type: "double",
                    grid: true,
                    prefix: "$",
                    min: 0,
                    max: 150000,
                    from: @Model.SalaryMin,
                    to: @Model.SalaryMax,
                    step: 5000
                });
            }
        });
    </script>
