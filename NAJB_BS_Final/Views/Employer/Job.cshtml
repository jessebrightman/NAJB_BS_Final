@model NAJB_BS_Final.Job
@{
    ViewBag.Title = Html.DisplayFor(model => model.name) + " - " + Html.DisplayFor(model => model.Company.name) + " - " + @Html.DisplayFor(model => model.location);
    Layout = "~/Views/Shared/_Layout_Employer.cshtml";
}

@Html.Partial("_Messages")

<div class="hide-on-large-only card" style="margin-top: 0px; position:fixed; top: 70px; width: 100%; border-top: 2px solid lightgray; z-index: 98;">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" id="searchli" class="col-xs-3"><a href="/Employer/Employer" @*aria-controls="home" role="tab" data-toggle="tab"*@><i class="fa fa-list-alt fa-lg"></i><br />Posts</a></li>
        <li role="presentation" id="profileli" class="col-xs-3"><a href="/Employer/AddJob" @*aria-controls="profile" role="tab" data-toggle="tab"*@><i class="fa fa-plus fa-lg"></i><br />Add</a></li>
        <li role="presentation" id="messagesli" class="col-xs-3"><a href="/Employer/Matches" @*aria-controls="messages" role="tab" data-toggle="tab"*@><i class="fa fa-retweet fa-lg"></i><br />Matches</a></li>
        <li role="presentation" id="settingsli" class="col-xs-3"><a href="/Employer/Archive" @*aria-controls="settings" role="tab" data-toggle="tab"*@><i class="fa fa-archive fa-lg"></i><br />Archive</a></li>
    </ul>
</div>
<div class="mobileSearch" style="">
    <div style="margin-bottom:15px !important;">
        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <div class="card" style="width: 100%; height:50px; margin-bottom: 1px; ">
                <div>
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" id="searchli" class="col-xs-3"><a href="/Employer/Employer" @*aria-controls="home" role="tab" data-toggle="tab"*@><i class="fa fa-list-alt fa-lg"></i><br />Posts</a></li>
                        <li role="presentation" id="profileli" class="col-xs-3"><a href="/Employer/AddJob" @*aria-controls="profile" role="tab" data-toggle="tab"*@><i class="fa fa-plus fa-lg"></i><br />Add</a></li>
                        <li role="presentation" id="messagesli" class="col-xs-3"><a href="/Employer/Matches" @*aria-controls="messages" role="tab" data-toggle="tab"*@><i class="fa fa-retweet fa-lg"></i><br />Matches</a></li>
                        <li role="presentation" id="settingsli" class="col-xs-3"><a href="/Employer/Archive" @*aria-controls="settings" role="tab" data-toggle="tab"*@><i class="fa fa-archive fa-lg"></i><br />Archive</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("_EmployerUserBox")
    <div class="col-md-9">
        <div class="mobileSearch" style="">
            <div class="jumbotron card" style="width: 100%;">

                <h1><i class="fa fa-list-alt page-icon" style="padding-left: 14px;"></i> @Html.DisplayFor(model => model.name)            </h1>

                <div class="row">
                    <hr style="border-top-color: #ee6e73; clear: both;" />
                    <div class="col-md-3">
                        <p style="margin: 0px;"><i class="fa fa-eye fa-md primary" style=""></i> @Html.DisplayFor(model => model.views) Views</p>
                    </div>
                    <div class="col-md-3">
                        <p style="margin: 0px;"><i class="fa fa-calendar fa-md primary" style=""></i> Posted: @Model.jobDate.ToShortDateString()</p>
                    </div>
                    <div class="col-md-3">
                        <p style="margin: 0px;"><i class="fa fa-calendar fa-md primary" style=""></i> Ends: @Model.jobEndDate.ToShortDateString()</p>
                    </div>
                </div>
                <div class="row" style="margin-top: 10px;">
                    @if (Model.location != null)
            {
                        <div class="col-md-3">
                            <p style="margin: 0px;"><i class="fa fa-map-marker fa-md" style="color: #26a69a;"></i> @Html.DisplayFor(model => model.location)</p>
                        </div>
                    }
                    @if (Model.jobType != null)
            {
                        <div class="col-md-3">
                            <p style="margin: 0px;"><i class="fa fa-clock-o fa-md" style="color: #26a69a;"></i> @Html.DisplayFor(model => model.jobType)</p>
                        </div>
                    }
                    @if (Model.experience != null)
            {
                        <div class="col-md-3">
                            <p style="margin: 0px;"><i class="fa fa-sort-amount-asc fa-md" style="color: #26a69a;"></i> @Html.DisplayFor(model => model.experience)</p>
                        </div>
                    }
                    @if (Model.salaryMin != null)
            {
                        <div class="col-md-3">
                            <p style="margin: 0px;"><i class="fa fa-dollar fa-md" style="color: #26a69a;"></i> $@Html.DisplayFor(model => model.salaryMin) - $@Html.DisplayFor(model => model.salaryMax)</p>
                        </div>
                    }
                </div>

                <div class="row">
                    <hr style="border-top-color: #ee6e73; clear: both;" />
                    <div class="col-xs-2" style="margin: 0 auto;">
                        <img class="circle" style="width: 80px; height: 80px; margin: auto; display: block;" src="~/Content/Images/@Html.DisplayFor(model => model.Company.logo)" />
                    </div>
                    <div class="col-xs-10 col-md-5">
                        <h3 style="margin-top: 5px;"><a href="/Employer/Company?id=@Html.DisplayFor(model => model.Company.ID)">@Html.DisplayFor(model => model.Company.name)</a></h3>
                        <p style="margin: 0px;">@Html.DisplayFor(model => model.Company.address)</p>
                        <p style="margin: 0px;"><a href="http://@Html.DisplayFor(model => model.Company.website)">@Html.DisplayFor(model => model.Company.website)</a></p>

                    </div>
                    <div class="col-xs-12 col-md-5">
                        <p style="margin: 0px;">Contact: @Html.DisplayFor(model => model.Company.contact)</p>
                        @if (Model.applyTo.IndexOf("@") == -1)
                        {

                        }
                        else
                        {
                            <p style="margin: 0px;">Apply To: @Html.DisplayFor(model => model.applyTo)</p>
                        }
                        <p style="margin: 0px;">Phone: @Html.DisplayFor(model => model.Company.phone)</p>
                    </div>
                </div>
                <div class="row">
                    <hr style="border-top-color: #ee6e73;" />
                    <div class="col-xs-12">
                        <h5><strong>Description:</strong></h5>
                        <p>@Html.Raw(Model.description)</p>
                    </div>
                </div>
                <div class="row">
                    <hr style="border-top-color: #ee6e73;" />
                </div>
            </div>
        </div>
    </div>
</div>