                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("_SearcherUserBox")
        <div class="col-md-9">
            <div class="jumbotron card" style="width: 100%;">
                <h1><i class="fa fa-info-circle page-icon" style="color:#ee6e73"></i> About</h1>
                <hr style="border-top-color: #ee6e73;" />

            </div>
        </div>
    </div>
</div>