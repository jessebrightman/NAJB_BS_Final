                </ul>*@
            </div>


            <br />
            <div class="row" style="margin-left: -15px !important; margin-right: -15px !important;">

                @foreach (var item in Model)
                {
                    <div class="col-xs-12 col-md-6 " style="float: left; margin-bottom: 20px;">
                        <div class="panel-group card">
                            <div class="panel panel-default">
                                <div class="panel-heading" style="height:auto; padding: 15px;">
                                    <div class="row">
                                        <div class="col-xs-3" style="padding: 0px;">
                                            @if (item.logo == "" || item.logo == null)
                                            {
                                                <img class="circle" style="width: 65px; height: 65px;" src="~/Content/Images/user.png" />
                                            }
                                            else
                                            {
                                                //<img class="activator" src="@Html.DisplayFor(modelItem => item.logo)">
                                                <img class="circle" style="width: 65px; height: 65px;" src="~/Content/Images/@Html.DisplayFor(modelItem => item.logo)" />
                                            }
                                        </div>
                                        <div class="col-xs-7" style="padding: 0px;">
                                            <h3 style="float:left; margin: 0px;">@Html.DisplayFor(modelItem => item.name)</h3><br />
                                            <h5><a href="http://@Html.DisplayFor(modelItem => item.website)">@Html.DisplayFor(modelItem => item.website)</a></h5><br />

                                        </div>
                                        <div class="col-xs-2" style="padding: 0px;">
                                            <h6>Jobs: @Html.DisplayFor(modelItem => item.Jobs.Count)</h6>
                                            <a data-toggle="collapse" href="#collapse-mobile-@Html.DisplayFor(modelItem => item.ID)"><i class="fa fa-chevron-down"></i></a>
                                        </div>
                                    </div>

                                </div>
                                <div id="collapse-mobile-@Html.DisplayFor(modelItem => item.ID)" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        @foreach (var job in item.Jobs)
                                        {
                                            <div class="col-xs-10">
                                                <h6><i class="fa fa-list-alt" style="color:#ee6e73"></i> @job.name</h6>
                                                <h6>@job.location</h6>
                                            </div>
                                                                <div class="col-xs-2" style="text-align:center;">
                                                                    <h6 style="float:right;">
                                                                        <a class="" style="color: grey;" href="/Searcher/Job?id=@job.ID">
                                                                            <i class="fa fa-eye text-info" title="View" style=""></i><br />View
                                                                        </a>
                                                                    </h6>
                                                                </div>
                                                                <hr style="border-top-color: #ee6e73;clear:both;" />
                                        }


                                    </div>


                                    @*<div class="panel-footer">

                    </div>*@
                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
