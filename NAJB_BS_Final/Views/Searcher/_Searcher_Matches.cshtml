                        @if (item.ignore == true)
                        {
                            <a class="" style="color: grey;" href="/Searcher/Job?id=@Html.DisplayFor(modelItem => item.jobID)">
                                <i class="fa fa-close fa-lg text-danger" style=""></i><br />Ignore
                            </a>
                        }
                        else
                        {
                            <a class="" style="color: grey;" href="/Searcher/Job?id=@Html.DisplayFor(modelItem => item.jobID)">
                                <i class="fa fa-close fa-lg text-danger" style=""></i><br />Ignore
