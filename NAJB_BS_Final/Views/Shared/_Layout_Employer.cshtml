    <script>
        $(document).ready(function () {
            $("#DateChip input").tagit({
                tagLimit: 1,
                afterTagAdded: function (event, ui) {
                    $("#DateChip input").datepicker("hide");
                }
            });
            $('#DateChip input').datepicker({
                onSelect: function () {
                    var dateObject = $(this).datepicker('getDate');
                    var date = $.datepicker.formatDate('mm/dd/yy', dateObject)
                    $("#DateChip input").tagit("createTag", date);
                    $("#DateChip input").datepicker("hide");
                }
            });
            
        });
    </script>
