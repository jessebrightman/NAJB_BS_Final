        <!-- Ajax Image File Upload -->
        <script>
            $("#File").change(function () {
                var data = new FormData();
                var files = $("#File").get(0).files;
                if (files.length > 0) {
                    data.append("MyImages", files[0]);
                }

                $.ajax({
                    url: "@Url.RouteUrl("Default", new { Action = "UploadFile", Controller = "Ajax" })",
                    type: "POST",
                    processData: false,
                    contentType: false,
                    data: data,
                    success: function (response) {
                        //code after success
                        $("#txtImg").val(response);
                        $("#myUploadedImg").attr('src', '/Content/Image/' + response);
                        $("#Image").val(response);
                    },
                    error: function (er) {
                        alert(er);
                    }

                });
            });
        </script>
        <!-- END Ajax Image File Upload -->
 
