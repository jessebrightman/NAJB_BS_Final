@model NAJB_BS_Final.ViewModels.ViewCompany

@{
    ViewBag.Title = "DuplicateJob";
    Layout = "~/Views/Shared/_Layout_Employer.cshtml";
}

<h2>DuplicateJob</h2>


<div class="hide-on-med-and-down" style="height: auto;">
    @*<div class="jumbotron card" style="background-color: rgba(201, 188, 188, 0.6); width: 100%;">*@
    <div class="jumbotron card" style="width: 100%;">
        <h2>AddJob</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>ViewUser</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="row">
                    <div class="form-group col-md-12">
                        <label class="control-label col-md-12" style="text-align: left;" for="Location">Job Name</label>
                        @*@Html.LabelFor(model => model.JobName, htmlAttributes: new { @class = "control-label col-md-2" })*@

                        <div class="col-md-12">
                            <span class="input-group-addon" id="basic-addon1" style="width: 5%; float: left; height:55px;"><i class="fa fa-comment fa-2x"></i></span>
                            @Html.EditorFor(model => model.JobName, new { htmlAttributes = new { @class = "form-control", data_role = "tagsinput", aria_describedby = "basic-addon1" } })
                            @Html.ValidationMessageFor(model => model.JobName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-12">
                        @Html.LabelFor(model => model.Industry, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align: left;" })
                        <div class="col-md-12">
                            <span class="input-group-addon" id="basic-addon1" style="width: 5%; float: left; height:55px;"><i class="fa fa-building fa-2x"></i></span>
                            @Html.EditorFor(model => model.Industry, new { htmlAttributes = new { @class = "form-control", data_role = "tagsinput" } })
                            @Html.ValidationMessageFor(model => model.Industry, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align: left;" })
                        <div class="col-md-12">
                            <span class="input-group-addon" id="basic-addon1" style="width: 10%; float: left; height:55px;"><i class="fa fa-commenting fa-2x"></i></span>
                            @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", data_role = "tagsinput" } })
                            @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.SalaryMin, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <i class="fa fa-dollar fa-2x"></i>
                            @Html.EditorFor(model => model.SalaryMin, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SalaryMin, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(model => model.Location, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align: left;" })
                        <div class="col-md-12">
                            <span class="input-group-addon" id="basic-addon1" style="width: 10%; float: left; height:55px;"><i class="fa fa-map-marker fa-2x"></i></span>
                            @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", data_role = "tagsinput" } })
                            @Html.ValidationMessageFor(model => model.Location, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        @*@Html.LabelFor(model => model.Radius, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align: left;" })
                            <div class="col-md-12">
                                <span class="input-group-addon" id="basic-addon1" style="width: 10%; float: left; height:55px;"><i class="fa fa-arrows-alt fa-2x"></i></span>
                                @Html.EditorFor(model => model.Radius, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Radius, "", new { @class = "text-danger" })
                            </div>*@
                        <div class="form-group " id="RadiusRadioButton">

                            <p style="margin-left:40px;">
                                @Html.Raw("Radius")
                            </p>
                            <i class="fa fa-arrows-alt fa-2x"></i>

                            <p style="display:inline-block; margin-left:40px;">
                                <input class="with-gap" name="group1" type="radio" id="Radiusch1" value="25" />
                                <label for="Radiusch1" style="padding: 0px 20px 0px 25px;">25km</label>
                            </p>
                            <p style="display:inline-block;">
                                <input class="with-gap" name="group1" type="radio" id="Radiusch2" value="50" />
                                <label for="Radiusch2" style="padding: 0px 20px 0px 25px;">50km</label>
                            </p>
                            <p style="display:inline-block;">
                                <input class="with-gap" name="group1" type="radio" id="Radiusch3" value="100" />
                                <label for="Radiusch3" style="padding: 0px 20px 0px 25px;">100km</label>
                            </p>
                            <p style="display:inline-block;">
                                <input class="with-gap" name="group1" type="radio" id="Radiusch4" value="" />
                                <label for="Radiusch4" style="padding: 0px 20px 0px 25px;">Province Wide</label>
                            </p>
                            @Html.ValidationMessageFor(model => model.Radius, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    @*<div class="form-group col-md-6">
                            @Html.LabelFor(model => model.JobType, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.JobType, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.JobType, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SalaryMax, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SalaryMax, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SalaryMax, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    @*<div class="form-group">
                            @Html.LabelFor(model => model.AdditionalLocations, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.AdditionalLocations, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AdditionalLocations, "", new { @class = "text-danger" })
                            </div>
                        </div>*@

                    @*<div class="form-group">
                             @Html.LabelFor(model => model.Experience, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Experience, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                </div>
                <div class="row">
                    <div class="col-lg-6" id="JobTypeCheckbox">
                        <div class="form-group">
                            <p style="margin-left:40px;">
                                @Html.Raw("Job Type")
                            </p>
                            <i class="fa fa-clock-o fa-2x"></i>
                            <p style="display:inline-block; margin-left:40px;">
                                <input type="checkbox" class="filled-in" id="JobTypech1" value="Full Time" />
                                <label for="JobTypech1" style="padding: 0px 20px 0px 25px;">Full Time</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="JobTypech2" value="Part Time" />
                                <label for="JobTypech2" style="padding: 0px 20px 0px 25px;">Part Time</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="JobTypech3" value="Casual" />
                                <label for="JobTypech3" style="padding: 0px 20px 0px 25px;">Casual</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="JobTypech4" value="Contract" />
                                <label for="JobTypech4" style="padding: 0px 20px 0px 25px;">Contract</label>
                            </p>
                            @Html.ValidationMessageFor(model => model.JobType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-lg-6" id="ExperienceCheckbox">
                        <div class="form-group">
                            <p style="margin-left:40px;">
                                Experience Level
                            </p>
                            <i class="fa fa-sort-amount-asc fa-2x"></i>
                            <p style="display:inline-block; margin-left:40px;">
                                <input type="checkbox" class="filled-in" id="Experiencech1" value="Entry Level" />
                                <label for="Experiencech1" style="padding: 0px 20px 0px 25px;">Entry Level</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="Experiencech2" value="0 - 2 Years" />
                                <label for="Experiencech2" style="padding: 0px 20px 0px 25px;">0 - 2 Years</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="Experiencech3" value="2 - 5 Years" />
                                <label for="Experiencech3" style="padding: 0px 20px 0px 25px;">2 - 5 Years</label>
                            </p>
                            <p style="display:inline-block;">
                                <input type="checkbox" class="filled-in" id="Experiencech4" value="5+ Years" />
                                <label for="Experiencech4" style="padding: 0px 20px 0px 25px;">5+ Years</label>
                            </p>
                            @Html.ValidationMessageFor(model => model.JobType, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
