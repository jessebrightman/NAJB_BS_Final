@model IEnumerable<NAJB_BS_Final.JobMatch>

@{
    ViewBag.Title = "Matches";
    Layout = "~/Views/Shared/_Layout_Searcher.cshtml";
}

<div class="hide-on-med-and-down" style="height: auto; margin-left: 2%; margin-right: 2%;">
